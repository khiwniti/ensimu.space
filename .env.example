# Enhanced Simulation System - Environment Configuration
# Copy this file to .env and configure your settings

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://ensumu_user:ensumu_password@localhost:5432/ensumu_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ensumu_db
DATABASE_USER=ensumu_user
DATABASE_PASSWORD=ensumu_password

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ===========================================
# CHROMADB CONFIGURATION
# ===========================================
CHROMADB_HOST=localhost
CHROMADB_PORT=8001
CHROMADB_COLLECTION_NAME=ensumu_knowledge

# ===========================================
# APPLICATION SETTINGS
# ===========================================
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# ===========================================
# EXTERNAL API KEYS
# ===========================================
# OpenAI API Key (for Knowledge Agent)
OPENAI_API_KEY=your_openai_api_key_here

# CopilotKit API Key (for frontend AI features)
COPILOT_API_KEY=your_copilot_api_key_here

# ===========================================
# PERFORMANCE SETTINGS
# ===========================================
MAX_WORKERS=4
CHECKPOINT_TIMEOUT=3600
MAX_CONCURRENT_WORKFLOWS=10
AGENT_TIMEOUT=300
HITL_TIMEOUT=1800

# Memory limits (in MB)
MAX_MEMORY_PER_AGENT=512
MAX_TOTAL_MEMORY=2048

# ===========================================
# SIMULATION SETTINGS
# ===========================================
# OpenFOAM installation path
OPENFOAM_ROOT=/opt/openfoam10
FOAM_USER_LIBBIN=${OPENFOAM_ROOT}/platforms/linux64GccDPInt32Opt/lib
FOAM_USER_APPBIN=${OPENFOAM_ROOT}/platforms/linux64GccDPInt32Opt/bin

# Default simulation parameters
DEFAULT_SOLVER=simpleFoam
DEFAULT_TURBULENCE_MODEL=kOmegaSST
DEFAULT_MESH_REFINEMENT=2

# ===========================================
# FILE STORAGE SETTINGS
# ===========================================
# Local storage paths
DATA_DIRECTORY=./data
LOGS_DIRECTORY=./logs
TEMP_DIRECTORY=./temp
CASE_DIRECTORY=./cases
OUTPUT_DIRECTORY=./output

# File size limits (in MB)
MAX_UPLOAD_SIZE=100
MAX_CASE_SIZE=1000
MAX_OUTPUT_SIZE=500

# ===========================================
# MONITORING & OBSERVABILITY
# ===========================================
# Prometheus metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Grafana configuration
GRAFANA_PASSWORD=admin
GRAFANA_PORT=3001

# Logging configuration
LOG_FORMAT=json
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# ===========================================
# SECURITY SETTINGS
# ===========================================
# JWT configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Security headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CORS=true

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable specific features
ENABLE_3D_VISUALIZATION=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_POST_PROCESSING=true
ENABLE_KNOWLEDGE_AGENT=true
ENABLE_PARALLEL_EXECUTION=true
ENABLE_HITL_CHECKPOINTS=true

# Experimental features
ENABLE_MACHINE_LEARNING=false
ENABLE_CLOUD_STORAGE=false
ENABLE_ADVANCED_PHYSICS=false

# ===========================================
# DOCKER CONFIGURATION
# ===========================================
# Docker-specific settings (used in docker-compose)
COMPOSE_PROJECT_NAME=ensumu-space
DOCKER_BUILDKIT=1

# Container resource limits
BACKEND_MEMORY_LIMIT=2g
FRONTEND_MEMORY_LIMIT=512m
POSTGRES_MEMORY_LIMIT=1g
CHROMADB_MEMORY_LIMIT=512m

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Only used in development mode
DEV_AUTO_RELOAD=true
DEV_DEBUG_SQL=false
DEV_MOCK_EXTERNAL_APIs=false
DEV_ENABLE_PROFILING=false

# Test database (for running tests)
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5433/test_ensumu_db

# ===========================================
# CLOUD DEPLOYMENT SETTINGS
# ===========================================
# AWS Configuration
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=ensumu-simulation-data

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_RESOURCE_GROUP=ensumu-resources
AZURE_STORAGE_ACCOUNT=ensumustorage

# Google Cloud Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GCP_STORAGE_BUCKET=ensumu-simulation-data

# ===========================================
# BACKUP & RECOVERY
# ===========================================
# Backup configuration
ENABLE_AUTO_BACKUP=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups

# Recovery settings
ENABLE_POINT_IN_TIME_RECOVERY=true
RECOVERY_WINDOW_HOURS=72

# ===========================================
# NOTIFICATION SETTINGS
# ===========================================
# Email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_USE_TLS=true

# Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
SLACK_CHANNEL=#ensumu-alerts

# ===========================================
# ADVANCED CONFIGURATION
# ===========================================
# Custom agent settings
CUSTOM_AGENTS_DIRECTORY=./custom_agents
ENABLE_CUSTOM_AGENTS=false

# Plugin system
PLUGINS_DIRECTORY=./plugins
ENABLE_PLUGINS=false

# API versioning
API_VERSION=v1
ENABLE_API_VERSIONING=true

# Cache settings
CACHE_TTL_SECONDS=3600
ENABLE_RESPONSE_CACHING=true

# Session management
SESSION_TIMEOUT_MINUTES=30
ENABLE_SESSION_PERSISTENCE=true